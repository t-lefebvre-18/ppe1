{% extends "base.html.twig" %}
{% block activeAccueil %}active{% endblock %}
{% block style %}<link href="css/style-signin.css" rel="stylesheet"> {% endblock %}
{% block title %} {{ parent() }} Se connecter {% endblock %}

{% block contenu %}

{% if session.login is not defined %}
<form class="form-signin" action="index.php?page=connexion" method="post" enctype="application/x-www-form-urlencoded">
  <h1 class="h3 mb-3 font-weight-normal">Connectez-vous au tableau de bord</h1>
  <div class="form-group">
    <!-- <label for="inputEmail">Adresse e-mail</label> -->
    <input type="email" class="form-control" id="inputEmail" name="inputEmail" aria-describedby="emailHelp" placeholder="Adresse e-mail" required autofocus>
    <!-- <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre email avec quelqu'un d'autre.</small> -->
  </div>
  <div class="form-group">
    <!-- <label for="inputPassword">Mot de passe</label> -->
    <input type="password" class="form-control" id="inputPassword" name="inputPassword" placeholder="Mot de passe" required>
  </div>
<br>
  <button type="submit" class="btn btn-lg btn-purple btn-block" name="btConnecter">Se connecter</button>
  <a href="index.php?page=inscrire">S'inscrire</a>
</form>

{% else %}
<div class="row">
  <div class="col-12 center">
    <div class="card shadow textcenter" style="max-width: 70rem;">
     <div class="card-body">
       <h1 class="card-title text-purple mb-3">Vous êtes connecté sur le tableau de bord</h1>
       {% if session.role == 1 %}

       <p class="card-text mb-3">
         En tant qu'administrateur vous avez accès à :
       </p>
       <a class="btn btn-purple" href="index.php?page=utilisateur" role="button">Gestion des utilisateurs</a>
       <a class="btn btn-purple" href="index.php?page=equipe" role="button">Gestion des équipes</a>
       <a class="btn btn-purple" href="index.php?page=developpeur" role="button">Gestion des developpeur</a>
       {% else %}
       <p class="card-text mb-3">
         En tant qu'utilisateur vous avez accès à :
       </p>
       <a class="btn btn-purple" href="#" role="button">Votre compte</a>
       <a class="btn btn-purple" href="#" role="button">Votre équipe</a>
       {% endif %}
     </div>
   </div>
  </div>

</div>
{% endif %}

{% endblock %}
