{% extends "base.html.twig" %}

{% block title %}
  {{ parent() }}
  - Gestion des entreprises
{% endblock %}

{% block contenu %}
<div class="textcenter">
  <h1 class="text-purple">
    Gestion des entreprises
  </h1>
</div>


  {% if form.valide is defined %}
    {% if form.valide == true %}
      <h1 class="h3 mb-3 font-weight-normal">{{ form.message }}</h1>
    {% else %}
      <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
    {% endif %}
  {% endif %}
  <a class="btn btn-purple" href="index.php?page=entrepriseajout" role="button">Ajouter une entreprises</a>
    <div class="table-responsive">
      <br>
      <table class="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th scope="col">Nom</th>
            <th scope="col">Ville</th>
            <th scope="col">Adresse</th>
            <th scope="col">Numéro</th>
            <th scope="col">Fax</th>
            <th scope="col">Code Postal</th>
            <th scope="col">Pays</th>
            <th scope="col">Contact</th>
            <th scope="col">Modifier</th>
            <th scope="col">Effacer</th>
          </tr>
        </thead>
        <tfoot class="thead-light">
          <tr>
            <th scope="col">Nom</th>
            <th scope="col">Ville</th>
            <th scope="col">Adresse</th>
            <th scope="col">Numéro</th>
            <th scope="col">Fax</th>
            <th scope="col">Code Postal</th>
            <th scope="col">Pays</th>
            <th scope="col">Contact</th>
            <th scope="col">Modifier</th>
            <th scope="col">Effacer</th>
          </tr>
        </tfoot>
        <tbody>
          {% for e in liste %}
            <tr>
              <td scope="row" class="text-maj">{{e.libelleEnt}}</td>
              <td>{{e.villeEnt}}</td>
              <td>{{e.adrEnt}}</td>
              <td>{{e.numEnt}}</td>
              <td>{{e.faxEnt}}</td>
              <td>{{e.cpEnt}}</td>
              <td>{{e.paysEnt}}</td>
              <td>{{e.emailContact}}</td>
              <td>
                <a href="index.php?page=entreprisemodif&id={{e.id}}">
                  <i class="fas fa-pen"></i>
                </a>
              </td>
              <td>
                <a href="index.php?page=entreprise&id={{e.id}}">
                  <i class="fas fa-trash"></i>
                </a>
              </td>
            </tr>
          {% else %}
            <tr class="textcenter">
              <th scope="row" colspan="6">La table entreprises ne contien aucune valeur.</th>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

{% endblock %}
